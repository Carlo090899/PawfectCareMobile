<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_bg_light_grey"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="@dimen/_12sdp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slot_label"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/textbox"
            android:backgroundTint="@color/light_grey"
            android:gravity="center"
            android:text="TASK UPDATE"
            android:textColor="@color/blue"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/task_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="TEST TITLE">
                </TextView>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/light_grey"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/close_square" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/follow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_weight="120"
                    android:background="@drawable/enter_btn"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:lineSpacingExtra="-5sp"
                        android:text="Confirm this Cargo"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/delete"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:backgroundTint="@color/red_btn_bg_pressed_color"
                        android:outlineSpotShadowColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:lineSpacingExtra="1sp"
                            android:text="Delete"
                            android:textColor="#FFFFFF" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>