<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_bg_light_grey"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="@dimen/_12sdp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slot_label"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/textbox"
            android:backgroundTint="@color/light_grey"
            android:gravity="center"
            android:text="ADD DOG'S FOOD"
            android:textColor="@color/main_orange_color"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/image_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="FOOD" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/dog_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="DESCRIPTION" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/food_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="-9sp"
                    android:textStyle="bold"
                    android:textColor="#01256D"
                    android:textSize="11sp"
                    android:text="QUANTITY" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/FormField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="100"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/light_grey"
                android:outlineSpotShadowColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/close_square" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/save_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/enter_btn"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/save_fill" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:lineSpacingExtra="-5sp"
                    android:text="Add Food"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>