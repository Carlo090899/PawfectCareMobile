<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/orange">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/white"
            android:fontFamily="@font/manrope"
            android:textStyle="bold"
            android:textSize="@dimen/_30ssp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_user"
        app:boxCornerRadiusBottomEnd="@dimen/_7sdp"
        app:boxCornerRadiusBottomStart="@dimen/_7sdp"
        app:boxCornerRadiusTopEnd="@dimen/_7sdp"
        app:boxCornerRadiusTopStart="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_12sdp"
        app:startIconDrawable="@drawable/icon_user"

        app:startIconTint="@color/blue"
        android:hint="Email Address"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxBackgroundColor="@color/light_grey"
        android:textColorHint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"
            android:textStyle="normal"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_pass"
        app:boxCornerRadiusBottomEnd="@dimen/_7sdp"
        app:boxCornerRadiusBottomStart="@dimen/_7sdp"
        app:boxCornerRadiusTopEnd="@dimen/_7sdp"
        app:boxCornerRadiusTopStart="@dimen/_7sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:fontFamily="@font/regular"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:startIconDrawable="@drawable/icon_lock"
        app:startIconTint="@color/blue"
        android:hint="Password"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/light_grey"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:fontFamily="@font/regular"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Log In"
        android:textSize="18sp"
        android:backgroundTint="@color/blue"
        android:layout_marginHorizontal="50dp" />

    <TextView
        android:id="@+id/new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Account?"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true" />

    </LinearLayout>

</LinearLayout>