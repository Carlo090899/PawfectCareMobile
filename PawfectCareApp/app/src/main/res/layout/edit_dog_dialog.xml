<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/slot_label"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/textbox"
                        android:backgroundTint="@color/light_grey"
                        android:gravity="center"
                        android:text="EDIT DOG DETAILS"
                        android:textColor="@color/main_orange_color"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="DOG NAME:"
                            android:textColor="#01256D"
                            android:textSize="11sp"
                            android:textStyle="bold" />


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/FormField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:hint="REMARKS"
                            app:errorEnabled="true"
                            app:hintTextColor="@color/light_grey">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_dog_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="100"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/manrope"
                        android:gravity="left"
                        android:lineSpacingExtra="-9sp"
                        android:text="BIRTHDATE:"
                        android:textColor="#01256D"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/FormField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="2"
                            android:hint="REMARKS"
                            app:errorEnabled="true"
                            app:hintTextColor="@color/light_grey">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_birthdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="100"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/date_picker"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_calendar" />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/manrope"
                            android:gravity="left"
                            android:lineSpacingExtra="-9sp"
                            android:text="NOTES:"
                            android:textColor="#01256D"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/FormField"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorEnabled="true">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLength="100"
                                android:textColor="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_cancel"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/light_grey"
                        android:outlineSpotShadowColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/close_square" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/save_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/enter_btn"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/save_fill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:lineSpacingExtra="-5sp"
                            android:text="Save"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </ScrollView>


</LinearLayout>